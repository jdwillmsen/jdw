{
  "name": "servicediscovery",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/go/servicediscovery",
  "tags": ["type:app", "scope:servicediscovery", "framework:go"],
  "targets": {
    "build": {
      "executor": "@nx-go/nx-go:build",
      "options": {
        "main": "{projectRoot}/main.go"
      }
    },
    "serve": {
      "executor": "@nx-go/nx-go:serve",
      "options": {
        "main": "{projectRoot}/main.go"
      }
    },
    "test": {
      "executor": "@nx-go/nx-go:test"
    },
    "lint": {
      "executor": "@nx-go/nx-go:lint"
    },
    "tidy": {
      "executor": "@nx-go/nx-go:tidy"
    },
    "build-image": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "docker buildx build --platform linux/amd64,linux/arm64 -f {projectRoot}/Dockerfile -t jdwillmsen/jdw-servicediscovery:latest -t jdwillmsen/jdw-servicediscovery:{version} --push .",
            "forwardAllArgs": false
          }
        ],
        "parallel": false
      }
    },
    "local-build-image": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "docker buildx build -f {projectRoot}/Dockerfile -t jdwillmsen/jdw-servicediscovery:latest --load .",
            "forwardAllArgs": false
          }
        ],
        "parallel": false
      }
    },
    "serve-container": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "docker run --rm -p 9000:9000 jdwillmsen/jdw-servicediscovery:latest",
            "forwardAllArgs": false
          }
        ],
        "parallel": false
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "push": true,
        "preset": "conventionalcommits",
        "postTargets": ["format", "build-image", "update-app"]
      }
    },
    "format": {
      "command": "bash tools/format.sh"
    },
    "update-app": {
      "command": "bash tools/update-app.sh helm/servicediscovery/Chart.yaml {version} {projectName}"
    },
    "download": {
      "command": "go mod download"
    }
  }
}
