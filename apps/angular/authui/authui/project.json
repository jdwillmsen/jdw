{
  "name": "authui",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/angular/authui/authui/src",
  "tags": [
    "type:app",
    "scope:authui",
    "framework:angular"
  ],
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/angular/authui/authui",
        "index": "apps/angular/authui/authui/src/index.html",
        "main": "apps/angular/authui/authui/src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "apps/angular/authui/authui/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/angular/authui/authui/public"
          }
        ],
        "styles": [
          "apps/angular/authui/authui/src/styles.scss",
          {
            "inject": false,
            "input": "apps/angular/authui/authui/src/styles/themes/pink-bluegrey.scss",
            "bundleName": "pink-bluegrey"
          },
          {
            "inject": false,
            "input": "apps/angular/authui/authui/src/styles/themes/deeppurple-amber.scss",
            "bundleName": "deeppurple-amber"
          },
          {
            "inject": false,
            "input": "apps/angular/authui/authui/src/styles/themes/indigo-pink.scss",
            "bundleName": "indigo-pink"
          },
          {
            "inject": false,
            "input": "apps/angular/authui/authui/src/styles/themes/purple-green.scss",
            "bundleName": "purple-green"
          },
          {
            "inject": false,
            "input": "apps/angular/authui/authui/src/styles/themes/red-teal.scss",
            "bundleName": "red-teal"
          },
          {
            "inject": false,
            "input": "apps/angular/authui/authui/src/styles/themes/black-white.scss",
            "bundleName": "black-white"
          },
          {
            "inject": false,
            "input": "apps/angular/authui/authui/src/styles/themes/user-custom-dark.scss",
            "bundleName": "custom-dark"
          },
          {
            "inject": false,
            "input": "apps/angular/authui/authui/src/styles/themes/user-custom-light.scss",
            "bundleName": "custom-light"
          }
        ],
        "scripts": [],
        "customWebpackConfig": {
          "path": "apps/angular/authui/authui/webpack.config.ts"
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "apps/angular/authui/authui/webpack.prod.config.ts"
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/angular:dev-server",
      "options": {
        "port": 4201,
        "publicHost": "http://localhost:4201"
      },
      "configurations": {
        "production": {
          "buildTarget": "authui:build:production"
        },
        "development": {
          "buildTarget": "authui:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "authui:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/angular/authui/authui/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "defaultConfiguration": "production",
      "options": {
        "buildTarget": "authui:build",
        "port": 4201,
        "watch": false
      },
      "configurations": {
        "development": {
          "buildTarget": "authui:build:development"
        },
        "production": {
          "buildTarget": "authui:build:production"
        }
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "push": true,
        "preset": "conventionalcommits",
        "postTargets": [
          "format",
          "save-version",
          "build-image",
          "update-app"
        ]
      }
    },
    "save-version": {
      "command": "bash tools/create-version.sh {version} {projectRoot}/public {projectName}"
    },
    "build-image": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "docker buildx build --platform linux/amd64,linux/arm64 -f {projectRoot}/Dockerfile -t jdwillmsen/jdw-authui:latest -t jdwillmsen/jdw-authui:{version} --push .",
            "forwardAllArgs": false
          }
        ],
        "parallel": false
      }
    },
    "local-build-image": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "docker buildx build -f {projectRoot}/Dockerfile -t jdwillmsen/jdw-authui:latest --load .",
            "forwardAllArgs": false
          }
        ],
        "parallel": false
      }
    },
    "update-app": {
      "command": "bash tools/update-app.sh helm/authui/Chart.yaml {version} {projectName}"
    },
    "format": {
      "command": "bash tools/format.sh"
    },
    "serve-container": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "docker run --rm -p 4201:4201 jdwillmsen/jdw-authui:latest",
            "forwardAllArgs": false
          }
        ],
        "parallel": false
      }
    }
  }
}
